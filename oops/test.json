db.cars.aggregate([
    {
        $project: {
            _id: 0,
            maker: 1,
            model: 1,
            price: 1
        }
    },
    {
        $addFields: {
            Price_Lakhs: { $concat: [{ $toString: { $round: { $divide: ["$price", 100000]} }}, " ", "Lakhs"] }
        }
    }
])